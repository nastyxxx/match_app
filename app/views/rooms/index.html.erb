<main role="main" class="container">
  
  <br /><br/><br />

  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent Chats</h6>
      <% current_user.rooms.each do |room|%>
      <div class="media text-muted pt-3">
        <%#= image_tag current_user.image, alt: "" class: "mr-2 rounded"%>
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <strong class="d-block text-gray-dark">
            <%= link_to room.name, room_messages_path(room) %>
          </strong><br />
        </p>
      </div>
      <% end %>
    <small class="d-block text-right mt-3">
      <a href="#">All updates</a>
    </small>
  </div>

  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Chat Member</h6>
      <% @rooms.each do |room| %>
      <div class="media text-muted pt-3">
        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <div class="d-flex justify-content-between align-items-center w-100">
            <strong class="text-gray-dark">
              <%= room.name%>
            </strong>
            <a href="#">フォロー</a>
          </div>
          <span class="d-block">@username</span>
        </div>
      </div>
      <% end %>
    <small class="d-block text-right mt-3">
      <a href="#">すべてのおすすめ</a>
    </small>
  </div>
</main>