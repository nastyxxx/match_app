<%=form_with model: @room, local: true do |f|%>
  
  <br />

  <h1 class="font-weight-bolder">New Chat</h1>

  <div class=>
    <div>
      <label for="inputChatname">Chat Name</label>
    </div>
    <div>
      <%= f.text_field :name, placeholder: 'Chat Name', id: "inputChatname"%>
    </div>
  </div>

  <div class=>
    <div>
      <label for="inputchatMember">Chat Member</label>
    </div>
    <div>
      <select name="room[user_ids][]" id="inputchatMember">
        <option value="" class=>Choose Chat Member</option>
        <% User.where.not(id: current_user.id).each do |user| %>
          <option value=<%= user.id %>><%= user.nickname %></option>
        <% end %>
      </select>
      <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>
    </div>
  </div>

  <div class="checkbox mb-3">
  </div>

  <button class="btn btn-primary" type="submit">Create</button>

<% end %>