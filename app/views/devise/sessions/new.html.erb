<h1 class="font-weight-bolder font-italic">Sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.label :email, class: 'font-italic' %><br />
  <div class="form-inline">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <%= f.label :password, class: 'font-italic' %><br />
  <div class="form-inline">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="custom-control custom-checkbox">
      <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck1" %>
      <%= f.label :remember_me, class: "custom-control-label", for: "customCheck1" %>
    </div>
  <% end %>

    <%= f.submit "Log in", class: 'btn btn-secondary mt-1' %>
<% end %>

<%= link_to 'Sign in with Facebook', user_facebook_omniauth_authorize_path, method: :post, class: 'text-reset font-italic'%><br />
<%= link_to 'Sign in with Google', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'text-reset font-italic'%><br />
<%= render "devise/shared/links" %>
